{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ES2019",
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "declarationDir": "types",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test",
    "src/types"
  ]
}
